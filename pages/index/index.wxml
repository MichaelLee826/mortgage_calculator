<!--index.wxml-->
<view class="content">
  <!--<image class='background' src="../../pics/background.jpg" mode="aspectFill"></image>-->
  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">商业贷款</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">公积金贷款</view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">组合贷款</view>
  </view>

  <swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab" style="height:{{winHeight}}rpx">
    <swiper-item>

      <view class='block'>
        <view class='textview'>贷款方式:</view>
        <view class='block_inside'>
          <picker id='picker_options' bindchange='bindPickerChange' value='{{index_options}}' range='{{mortgage_options}}'>
            <view class='text'>{{mortgage_options[index_options]}}</view>
          </picker>
          <image class='arrow' src="../../pics/forward-100.png"></image>
        </view>
      </view>

      <view class='block'>
        <view class='textview'>贷款年限:</view>
        <view class='block_inside'>
          <picker id='picker_duration' bindchange='bindPickerChange' value='{{index_duration}}' range='{{mortgage_duration}}'>
            <view class='text'>{{mortgage_duration[index_duration]}}</view>
          </picker>
          <image class='arrow' src="../../pics/forward-100.png"></image>
        </view>
      </view>

      <view class='block'>
        <view class='textview'>计算方式:</view>
        <view class='block_inside'>
          <picker id='picker_ways' bindchange='bindPickerChange' value='{{index_ways}}' range='{{mortgage_ways}}'>
            <view class='text'>{{mortgage_ways[index_ways]}}</view>
          </picker>
          <image class='arrow' src="../../pics/forward-100.png"></image>
        </view>
      </view>

      <view class='block'>
        <view class='textview'>贷款金额:</view>
        <view class='block_inside_alpha'>
          <input class='inputview' placeholder='请输入贷款总额' placeholder-style='color:#ccc'></input>
          <view class='inputtextview'>万元</view>
        </view>
      </view>

      <view class='block'>
        <view class='textview'>利率选择:</view>
        <view class='block_inside'>
          <picker id='picker_interest' bindchange='bindPickerChange' value='{{index_interest}}' range='{{mortgage_interest}}'>
            <view class='text'>{{mortgage_interest[index_interest]}}</view>
          </picker>
          <image class='arrow' src="../../pics/forward-100.png"></image>
        </view>
      </view>

      <view class='block'>
        <view class='textview'>贷款利率:</view>
        <view class='block_inside'>
          <input class='inputview' placeholder='自定义利率' placeholder-style='color:#ccc'></input>
          <view class='inputtextview'>%</view>
        </view>
      </view>

      <view class='block'>
        <view class='textview'>首次还款时间:</view>
        <view class='block_inside'>
          <picker id='picker_payback_time' mode='date' fields='month'>
            <view class='text'>{{mortgage_payback_time}}</view>
          </picker>
          <image class='arrow' src="../../pics/forward-100.png"></image>
        </view>
      </view>

    </swiper-item>

    <swiper-item><view>公积金贷款</view></swiper-item>
    <swiper-item><view>组合贷款</view></swiper-item>
  </swiper>
</view>