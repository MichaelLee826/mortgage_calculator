<!--index.wxml-->
<view class="content">
  <image class='background' src="../../pics/background.jpg" mode="aspectFill"></image>
  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">商业贷款</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">公积金贷款</view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">组合贷款</view>
  </view>

  <swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
    <swiper-item>
      <view class='block'>
        <view class='textview'>贷款方式:</view>
        <view class='block_inside'>
          <picker bindchange='bindPickerChange' value='{{index}}' range='{{mortgage_options}}'>
            <view class='text'>{{mortgage_options[index]}}</view>
          </picker>
          <image class='arrow' src="../../pics/forward-filled-100.png"></image>
        </view>
      </view>
      <view class='block'>
        <view class='textview'>贷款年限:</view>
        <view class='block_inside'>
          <picker bindchange='bindPickerChange' value='{{index}}' range='{{mortgage_duration}}'>
            <view class='text'>{{mortgage_duration[index]}}</view>
          </picker>
          <image class='arrow' src="../../pics/forward-filled-100.png"></image>
        </view>
      </view>


    </swiper-item>

    <swiper-item><view>公积金贷款</view></swiper-item>
    <swiper-item><view>组合贷款</view></swiper-item>
  </swiper>
</view>